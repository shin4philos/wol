# ------------------------------------------------------------
#   Makefile for wol
# ------------------------------------------------------------

CC = g++
CCFLAGS = -g -Wall -O2 -std=c++20
CCLIBS = 
CCINCLUDES =

%.o : %.cc
	$(CC) $(CCINCLUDES) $(CCFLAGS) -c $<

.PHONY: clean
.PHONY: docs

# ------------------------------------------------------------
#   rules
# ------------------------------------------------------------

wol : wol.o
	$(CC) -o $@ $?

wol.o : socket.hh mac.hh mpacket.hh wol.cc

docs:
	doxygen Doxyfile
clean:
	@rm -rf wol *.o *~

# ------------------------------------------------------------
#   dependencies
# ------------------------------------------------------------
